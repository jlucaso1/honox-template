{
	"name": "basic",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "bun build:client && bun build:server",
		"build:client": "vite build --mode client",
		"build:server": "vite build",
		"preview": "bun --bun run dist/server.js",
		"typecheck": "tsc --noEmit",
		"format": "bunx biome format --write .",
		"lint": "bunx biome lint --write ."
	},
	"private": true,
	"dependencies": {
		"hono": "^4.5.1",
		"honox": "^0.1.23"
	},
	"devDependencies": {
		"@biomejs/biome": "1.8.3",
		"@hono/vite-dev-server": "^0.13.1",
		"@types/bun": "^1.1.6",
		"autoprefixer": "^10.4.19",
		"postcss": "^8.4.40",
		"tailwindcss": "^3.4.6",
		"vite": "^5.3.4"
	}
}
